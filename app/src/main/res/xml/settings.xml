<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory android:title="@string/preference_appearance_header">
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_dark_theme_key"
			android:title="@string/preference_dark_theme_title" />

		<SeekBarPreference
			android:defaultValue="14"
			android:key="@string/preference_font_size_key"
			android:max="25"
			android:title="@string/preference_font_size_title"
			app:min="10"
			app:showSeekBarValue="true"
			app:updatesContinuously="true" />
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_show_input_key"
			android:summary="@string/preference_show_input_summary"
			android:title="@string/preference_show_input_title" />
		<SwitchPreference
			android:defaultValue="false"
			android:key="@string/preference_line_separator_key"
			android:title="@string/preference_line_separator_title" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/preference_general_header">

		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_keep_screen_on_key"
			android:title="@string/preference_keep_screen_on_title" />

		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_animate_gifs_key"
			android:title="@string/preference_animate_gifs_title" />

		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_timestamp_key"
			android:title="@string/preference_timestamp_title" />

		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_roomstate_key"
			android:summary="@string/preference_roomstate_summary"
			android:title="@string/preference_roomstate_title" />

		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_streaminfo_key"
			android:summary="@string/preference_streaminfo_summary"
			android:title="@string/preference_streaminfo_title" />

		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_show_timed_out_messages_key"
			android:summary="@string/preference_show_timed_out_messages_summary"
			android:title="@string/preference_show_timed_out_messages_title" />

		<ListPreference
			android:defaultValue="name"
			android:entries="@array/mention_formats"
			android:entryValues="@array/mention_formats"
			android:key="@string/preference_mention_format_key"
			android:summary="@string/preference_mention_format_summary"
			android:title="@string/preference_mention_format_title" />

		<Preference
			android:key="@string/preference_custom_mentions_key"
			android:summary="@string/preference_custom_mentions_summary"
			android:title="@string/preference_custom_mentions_title" />

		<Preference
			android:key="@string/preference_blacklist_key"
			android:summary="@string/preference_blacklist_summary"
			android:title="@string/preference_blacklist_title" />

		<Preference
			android:key="@string/preference_logout_key"
			android:title="@string/preference_logout_title" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/preference_notification_header">
		<SwitchPreference
			android:defaultValue="true"
			android:key="@string/preference_notification_key"
			android:summary="@string/preference_notification_summary"
			android:title="@string/preference_notification_title" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/preference_about_header">
		<Preference
			android:key="@string/preference_about_key"
			android:selectable="false" />
	</PreferenceCategory>
</PreferenceScreen>